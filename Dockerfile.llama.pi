# Dockerfile for llama.cpp server - Raspberry Pi 5 optimized
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    curl \
    libopenblas-dev \
    liblapack-dev \
    gfortran \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r llama && useradd -r -g llama llama

# Set working directory
WORKDIR /app

# Clone and build llama.cpp with ARM64 optimizations
RUN git clone https://github.com/ggerganov/llama.cpp.git && \
    cd llama.cpp && \
    make clean && \
    make server LLAMA_OPENBLAS=1 -j$(nproc) && \
    chmod +x server

# Create models directory
RUN mkdir -p models && chown -R llama:llama /app

# Switch to non-root user
USER llama

# Expose port
EXPOSE 8082

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8082/health || exit 1

# Default command with Pi 5 optimizations
CMD ["./llama.cpp/server", \
     "-m", "/app/models/qwen2-1.5b-q4_k_m.gguf", \
     "--host", "0.0.0.0", \
     "--port", "8082", \
     "--threads", "4", \
     "--ctx-size", "2048", \
     "--batch-size", "512", \
     "--mlock", \
     "--no-mmap"]
